@model CompanyModel

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id == 0 ? "Create" : "Edit") Company</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" asp-action="Upsert">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    @*<div asp-validation-summary="All"></div>*@
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border-0 shadow" placeholder="Enter name" />
                        <label asp-for="Name" class="ms-2 text-muted"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="StreetAddress" class="form-control border-0 shadow" placeholder="Enter street address" />
                        <label asp-for="StreetAddress" class="ms-2 text-muted"></label>
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12 ">
                        <input asp-for="City" class="form-control border-0 shadow" placeholder="Enter city" />
                        <label asp-for="City" class="ms-2 text-muted"></label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="State" class="form-control border-0 shadow" placeholder="Enter state" />
                        <label asp-for="State" class="ms-2 text-muted"></label>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="PostalCode" class="form-control border-0 shadow" placeholder="Enter postal code" />
                        <label asp-for="PostalCode" class="ms-2 text-muted"></label>
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="PhoneNumber" class="form-control border-0 shadow" placeholder="Enter phone number" />
                        <label asp-for="PhoneNumber" class="ms-2 text-muted"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            @if (Model.Id == 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">
                                    <i class="bi bi-plus-circle"></i> &nbspCreate
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">
                                    <i class="bi bi-plus-circle"></i> &nbspUpdate
                                </button>
                            }
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary form-control">
                                <i class="bi bi-backspace"></i> &nbspBack
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@*Client Side Validation*@
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}