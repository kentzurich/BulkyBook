@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbspAdd Category
                </a>
            </div>
        </div>
        </br></br>

        <table class="table table-hover" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col">Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(x => x.Name))
                {
                    <tr class="table-light">
                        <td scope="row" width="50%">
                            @obj.Name
                        </td>
                        <td scope="row" width="30%">
                            @obj.DisplayOrder
                        </td>
                        <td scope="row">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> &nbspUpdate
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> &nbspDelete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>